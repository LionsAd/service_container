# @file
# .travis.yml - Drupal for Travis CI Integration
#
# Based for simpletest upon:
#   https://github.com/sonnym/travis-ci-drupal-module-example

language: php

php:
  - 5.3
  - 5.4
  - 5.5
  - 5.6
  - hhvm

matrix:
  fast_finish: true
  allow_failures:
    - php: hhvm

env:
  global:
    # add composer's global bin directory to the path
    # see: https://github.com/drush-ops/drush#install---composer
    - PATH="$PATH:$HOME/.composer/vendor/bin"
    - DRUPAL_TI_MODULE_NAME="service_container"
    - DRUPAL_TI_DB="drupal_travis_db"
    - DRUPAL_TI_DBURL="mysql://root:@127.0.0.1/drupal_travis_db"
    - DRUPAL_TI_WEBSERVER="http://127.0.0.1:8080"
    - DRUPAL_TI_SIMPLETEST_ARGS="--verbose --color --concurrency 4 --url http://127.0.0.1:8080 $DRUPAL_TI_MODULE_NAME"
    - DRUPAL_TI_COVERAGE="satooshi/php-coveralls:0.6.*"

  matrix:
    - DRUPAL_TI_RUNNERS="phpunit"
    - DRUPAL_TI_RUNNERS="phpunit simpletest"

mysql:
  database: drupal_travis_db
  username: root
  encoding: utf8

install:
  - composer global require LionsAd/drupal_ti:1.*
  - drupal-ti install

before_script:
  - drupal-ti before-script

script:
  - drupal-ti script

after_script:
  - drupal-ti after-script

notifications:
  email: false
  webhooks:
    urls:
      - https://webhooks.gitter.im/e/0c7b5a71d435245837a1
    on_success: always
    on_failure: always
    on_start: false
